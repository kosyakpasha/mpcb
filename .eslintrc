{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [ "eslint:recommended" ],
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "legacyDecorators": true
          },
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "comma-dangle": ["error", "always"]
    }
}
